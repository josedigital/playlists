// .fade-in

@keyframes fadeIn
  0%
    opacity(0)
  100%
    opacity(1)
.fade-in
  animation-name fadeIn



// .fade-in-down

@keyframes fadeInDown
  0%
    opacity(0)
    transform translate3d(0, -30px, 0)
  100%
    opacity(1)
    -webkit-transform none
    transform none
.fade-in-down
  animation-name fadeInDown



// .fade-in-down-big

@keyframes fadeInDownBig
  0%
    opacity(0)
    transform translate3d(0, -100%, 0)
  100%
    opacity(1)
    transform none
.fade-in-down-big
  animation-name fadeInDownBig



