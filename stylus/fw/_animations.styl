// .rotate-colors
@keyframes rotateColors
  0%
    background-color color-base
  20%
    background-color mix(color-base, mediumvioletred)
  40%
    background-color mix(color-base, lightseagreen)
  60%
    background-color mix(color-base, mintcream)
  80%
    background-color spin(color-base, 180)
  100%
    background-color spin(color-base, -(360 / 3))
.rotate-colors
  animation 2s rotateColors infinite