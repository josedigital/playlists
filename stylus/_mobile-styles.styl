  background-attachment fixed
  background-position center center
  background-attachment fixed
  background-size cover




.preloader
  position relative
  margin 40vh auto 0
  width 100px

  span
    display block
    bottom 0px
    width 9px
    height 5px
    background color-gray
    position absolute
    animation preloader 1.5s infinite ease-in-out
 
    &:nth-child(2)
      left 11px
      animation-delay .2s
    &:nth-child(3)
      left 22px
      animation-delay: .4s
    &:nth-child(4)
      left 33px
      animation-delay .6s
    &:nth-child(5)
      left 44px
      animation-delay .8s

@keyframes preloader 
  0% 
    height 5px
    transform translateY(0px);
    background color-gray;
  25% 
    height 30px
    transform translateY(15px)
    background base-color
  50% 
    height 5px
    transform translateY(0px)
    background color-gray
  100% 
    height 5px
    transform translateY(0px)
    background color-gray



