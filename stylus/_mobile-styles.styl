// PLAYER

.audiojs audio
    left -1px
    position absolute


.audiojs 
  background rgba(black, 0.5)
  box-shadow 1px 1px 8px rgba(black, 0.3)
  font-family: monospace;
  font-size(12)
  height 70px
  overflow hidden
  width 100%

  .play-pause
    border-right 1px solid rgba(color-gray, 0.4)
    float left
    height 70px
    margin 0
    overflow hidden
    padding 23px 6px
    width 10%

  p
    cursor pointer
    display none
    height 30px
    margin 0
    width 25px

  .play
    display block

  .scrubber
    background rgba(white, 0.4)
    border-bottom 0 none
    border-left 0 none
    float left
    height 1.5em
    margin 28px 10px
    overflow hidden
    position relative
    width 40%

  .progress
    background -moz-linear-gradient(center top , #CCCCCC 0%, #DDDDDD 50%, #CCCCCC 51%, #CCCCCC 100%) repeat scroll 0 0 #CCCCCC
    height 14px
    left 0
    position absolute
    top 0
    width 0
    z-index 1

  .loaded
    background rgba(black, 0.5)
    height 14px
    left 0
    position absolute
    top 0
    width 0

  .time
    border-left 1px solid rgba(color-gray, 0.4)
    color #DDDDDD
    float left
    height 76px
    line-height 73px
    margin 0 0 0 6px
    padding 18px 0 0 22px
    text-shadow 1px 1px 0 rgba(0, 0, 0, 0.5)
    width 10%

    em
      color #F9F9F9
      font-style normal
      padding 0 2px 0 0

    strong
      font-weight normal
      padding 0 0 0 2px

  .error-message
    color #FFFFFF
    display none
    float left
    height 36px
    line-height 36px
    margin 0 10px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    width 400px

    a
    border-bottom 1px solid #999999
    color #EEEEEE
    padding-bottom 1px
    text-decoration none

  .play
    background url("../js/player-graphics.gif") no-repeat scroll -2px -1px transparent
    margin-left: -5px

  .loading
    background: url("../js/player-graphics.gif") no-repeat scroll -2px -31px transparent
    margin-left: -5px

  .error
    background: url("../js/player-graphics.gif") no-repeat scroll -2px -61px transparent
    margin-left: -5px

  .pause
    background: url("../js/player-graphics.gif") no-repeat scroll -2px -91px transparent
    margin-left: -5px

.playing .play, .playing .loading, .playing .error
  display: none;

.playing .pause
  display: block;

.loading .play, .loading .pause, .loading .error
  display: none;

.loading .loading
  display: block;

.error .time, .error .play, .error .pause, .error .scrubber, .error .loading
  display: none;

.error .error
  display: block;

.error .play-pause p
  cursor: auto;

.error .error-message
  display: block;







/* ADMIN PANEL */
.close-button
  color color-base
  position absolute
  right 10px
  top 2px
  font-size(20)
  padding 5px

#admin-panel
  background #fff
  position fixed
  top 0
  left 110%
  box-shadow -16px 6px 13px rgba(0,0,0,0.4)
  height 100vh
  overflow scroll
  right 0
  transition all 0.75s ease

  &.editing
    left 0
    z-index 2
    +above(480px)
      left 30%
  


.overlay
  transition all 0.75s ease
  background rgba(255,255,255,0)

  &.show 
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    z-index 1
    background rgba(255,255,255,0.8)
  

  &.hide
    z-index -1
    background rgba(255,255,255,0)
  
